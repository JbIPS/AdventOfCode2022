{
    "ts-node": {
      "transpileOnly": true
    },
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "strictNullChecks": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2020",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "incremental": true,
      "resolveJsonModule": true,
      "strict": true,
    }
  }